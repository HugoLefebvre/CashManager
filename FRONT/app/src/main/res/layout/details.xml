<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/Logo"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_marginBottom="620dp"
            android:text=" Cash Manager"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="607dp"
            android:background="@drawable/panier" />

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/product1" />


        <TextView
            android:id="@+id/article_name"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="168dp"
            android:text="Veste en cuire"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="318dp"
            android:layout_marginRight="318dp"
            android:layout_marginBottom="100dp"
            android:text=" Price: $"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="169dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="239dp"
            android:layout_marginRight="239dp"
            android:layout_marginBottom="130dp"
            android:text=" Article code: "
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/article_code"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="130dp"
            android:text="P024742019"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/article_price"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="100dp"
            android:text="200.00"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_deleteArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_article"
            android:layout_alignRight="@+id/img_article"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="117dp"
            android:layout_marginLeft="117dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_rectangle_green"
            android:text="delete article"
            android:textColor="@color/White"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_addCart"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_article"
            android:layout_alignRight="@+id/img_article"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="350dp"
            android:layout_marginLeft="350dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="161dp"
            android:background="@drawable/button_rectangle_green"
            android:text="+"
            android:textColor="@color/White"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_deleteCart"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_article"
            android:layout_alignRight="@+id/img_article"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="351dp"
            android:layout_marginLeft="351dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="93dp"
            android:background="@drawable/button_rectangle_green"
            android:text="-"
            android:textColor="@color/White"
            android:textSize="22dp"
            android:textStyle="bold" />


</RelativeLayout>