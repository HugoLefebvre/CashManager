<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/cashanagerlogo">


    <TextView
        android:id="@+id/Name"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="259dp"
        android:layout_marginRight="259dp"
        android:layout_marginBottom="1dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="276dp"
        android:background="@color/black"
        android:textColor="@color/Green"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/password"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="231dp"
        android:layout_marginRight="231dp"
        android:layout_marginBottom="0dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="196dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/icon_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/Green" />

    <TextView
        android:id="@+id/conpassword"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_confpassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:layout_marginBottom="0dp"
        android:text="Confirme your Password"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_confpassword"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="110dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/icon_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/Green" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_rectangle_green"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</RelativeLayout>